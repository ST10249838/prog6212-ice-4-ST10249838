@model IEnumerable<ICE4.Models.TaskModel>

<h2>Task List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Deadline</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Deadline.ToString("d")</td>
                <td>
                    <a href="@Url.Action("Edit", "Task", new { id = task.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Task", new { id = task.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Task")">Create New Task</a>
